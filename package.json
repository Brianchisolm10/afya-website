{
  "name": "afya-website",
  "version": "0.1.0",
  "private": true,
  "sideEffects": [
    "*.css",
    "*.scss",
    "./app/globals.css",
    "./lib/monitoring/**/*",
    "./lib/db.ts"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "npx prisma generate",
    "seed:admin": "tsx scripts/seed-admin.ts",
    "seed:questions": "tsx prisma/seed-question-blocks.ts",
    "seed:paths": "tsx prisma/seed-intake-paths.ts",
    "seed:templates": "tsx prisma/seed-packet-templates.ts",
    "seed:all": "npm run seed:questions && npm run seed:paths && npm run seed:templates",
    "regenerate-pdfs": "tsx scripts/regenerate-pdfs.ts",
    "test-pdf": "tsx scripts/test-pdf-generation.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "deploy:setup": "npm run db:generate && npm run db:migrate && npm run seed:all",
    "deploy:verify": "npm run lint && npm run test && npm run build",
    "verify:deployment": "tsx scripts/verify-deployment.ts",
    "post-deploy": "bash scripts/post-deploy.sh",
    "analyze": "ANALYZE=true npm run build",
    "analyze:bundle": "tsx scripts/analyze-bundle.ts"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.19.0",
    "@stripe/react-stripe-js": "^5.4.0",
    "@stripe/stripe-js": "^8.5.2",
    "@types/pdfkit": "^0.17.3",
    "autoprefixer": "^10.4.22",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.554.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.0",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "prisma": "^6.19.0",
    "react": "^18",
    "react-dom": "^18",
    "stripe": "^20.0.0",
    "web-vitals": "^4.2.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/ui": "^4.0.10",
    "eslint": "^8",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^4.0.10"
  }
}
